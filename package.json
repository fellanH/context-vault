{
  "name": "context-vault-monorepo",
  "private": true,
  "version": "2.6.0",
  "type": "module",
  "workspaces": [
    "packages/core",
    "packages/local",
    "packages/hosted",
    "packages/app",
    "packages/marketing",
    "packages/extension"
  ],
  "scripts": {
    "cli": "node packages/local/bin/cli.js",
    "ui": "npm run build --workspace=packages/app && npm run cli -- ui",
    "app:dev": "npm run dev --workspace=packages/app",
    "app:build": "npm run build --workspace=packages/app",
    "marketing:dev": "npm run dev --workspace=packages/marketing",
    "marketing:build": "npm run build --workspace=packages/marketing",
    "extension:dev": "npm run dev --workspace=packages/extension",
    "extension:build": "npm run build --workspace=packages/extension",
    "hosted:dev": "npm run dev --workspace=packages/hosted",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "node scripts/release.mjs",
    "publish:extension": "node scripts/publish-extension.mjs",
    "deploy": "fly deploy",
    "deploy:secrets": "echo 'Run: fly secrets set AUTH_REQUIRED=true VAULT_MASTER_SECRET=<secret> STRIPE_SECRET_KEY=<key> STRIPE_WEBHOOK_SECRET=<secret> STRIPE_PRICE_PRO=<price>'",
    "docker:build": "docker build -f packages/hosted/Dockerfile -t context-vault .",
    "docker:run": "docker run -p 3000:3000 -e AUTH_REQUIRED=false -v context_vault_data:/data -e CONTEXT_MCP_DATA_DIR=/data -e CONTEXT_MCP_VAULT_DIR=/data/vault context-vault"
  },
  "devDependencies": {
    "vitest": "^3.0.0"
  }
}
